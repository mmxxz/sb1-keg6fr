.form-header {
  margin-bottom: 30rpx;
  text-align: center;
}

.date {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
}

.project-entry {
  margin-bottom: 40rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.entry-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.entry-title {
  font-size: 32rpx;
  font-weight: bold;
}

.btn-remove {
  font-size: 28rpx;
  color: #ff4d4f;
}

.hours-row {
  display: flex;
  gap: 20rpx;
}

.hours-input {
  flex: 1;
}

.form-footer {
  margin-top: 40rpx;
}

.btn-add {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 32rpx;
  border-radius: 8rpx;
  border: none;
  margin-bottom: 20rpx;
}

.btn-primary {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  border: none;
}

.btn-primary:active {
  opacity: 0.8;
}