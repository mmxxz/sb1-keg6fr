.filter-card {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-item {
  flex: 1;
}

.picker {
  height: 88rpx;
  background: #fff;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.picker.placeholder {
  color: #999;
}

.logs-list {
  margin-bottom: 120rpx;
}

.log-card {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.log-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.employee-info {
  flex: 1;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
}

.department {
  font-size: 24rpx;
  color: #666;
}

.status {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  background: #f5f5f5;
  color: #666;
}

.status-approved {
  background: rgba(7, 193, 96, 0.1);
  color: var(--primary-color);
}

.log-content {
  background: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
}

.log-item {
  display: flex;
  margin-bottom: 10rpx;
}

.log-item:last-child {
  margin-bottom: 0;
}

.log-item .label {
  width: 100rpx;
  color: #666;
  font-size: 28rpx;
}

.log-item .value {
  flex: 1;
  font-size: 28rpx;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-export {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  border: none;
}

.btn-export::after {
  border: none;
}