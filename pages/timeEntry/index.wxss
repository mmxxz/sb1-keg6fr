.time-entries {
  margin: 20rpx 0;
}

.project-info {
  flex: 1;
}

.project-name {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
}

.task-name {
  font-size: 28rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}

.hours-info {
  text-align: right;
}

.overtime {
  color: var(--primary-color);
  margin-left: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.weekly-summary .day-info {
  flex: 1;
}

.day {
  font-weight: bold;
  margin-right: 20rpx;
}

.date {
  color: #666;
}

.hours-total {
  font-weight: bold;
}