.timesheet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.employee-info {
  flex: 1;
}

.employee-info .name {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}

.employee-info .id {
  font-size: 28rpx;
  color: #999;
  margin-top: 8rpx;
}

.timesheet-status {
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  background: #f5f5f5;
  color: #666;
}

.info-section {
  margin-top: 30rpx;
}

.info-item {
  margin-bottom: 20rpx;
}

.info-item .label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.info-item .value {
  font-size: 32rpx;
  color: #333;
}

.approval-actions {
  margin-top: 40rpx;
  display: flex;
  gap: 20rpx;
}

.btn-approve, .btn-reject {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  border: none;
}

.btn-approve {
  background: var(--primary-color);
  color: #fff;
}

.btn-reject {
  background: #ff4d4f;
  color: #fff;
}

.reject-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.dialog-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.dialog-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 2rpx solid #f5f5f5;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
}

.dialog-body {
  padding: 30rpx;
}

.reject-reason {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.dialog-footer {
  display: flex;
  border-top: 2rpx solid #f5f5f5;
}

.dialog-footer button {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border: none;
  border-radius: 0;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: var(--primary-color);
  color: #fff;
}