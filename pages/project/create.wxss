.form-footer {
  margin-top: 40rpx;
}

.btn-primary {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  border: none;
}

.btn-primary::after {
  border: none;
}

.btn-primary:active {
  opacity: 0.8;
}