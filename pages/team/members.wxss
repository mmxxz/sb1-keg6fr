.team-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background: #fff;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.team-info {
  flex: 1;
  margin-right: 20rpx;
}

.team-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.team-description {
  font-size: 28rpx;
  color: #666;
}

.btn-add {
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  color: #fff;
  background: var(--primary-color);
  border-radius: 8rpx;
  border: none;
  line-height: 1.5;
}

.btn-add::after {
  display: none;
}

.members-list {
  margin-top: 20rpx;
}

.member-card {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.member-info {
  flex: 1;
}

.member-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.member-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.member-role {
  font-size: 24rpx;
  color: var(--primary-color);
  background: rgba(7, 193, 96, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.member-title {
  font-size: 28rpx;
  color: #666;
}

.member-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  transform: rotate(45deg);
  margin-left: 20rpx;
}

.action-sheet {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.action-sheet-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.action-sheet-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
}

.action-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.action-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.action-name {
  font-size: 32rpx;
  font-weight: bold;
}

.action-list {
  padding: 0 30rpx;
}

.action-item {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.action-item.danger {
  color: #ff4d4f;
}

.action-cancel {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #999;
  background: #f5f5f5;
}