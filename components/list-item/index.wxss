.list-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-bottom: 2rpx solid #f5f5f5;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.content {
  flex: 1;
}

.title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.extra {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  transform: rotate(45deg);
}