.calendar {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.calendar-header {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 0;
}

.calendar-weeks {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.week-day {
  color: #999;
}

.calendar-days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
  padding: 20rpx 0;
}

.day {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  position: relative;
}

.today {
  background: var(--primary-color);
  color: #fff;
}

.disabled {
  color: #ccc;
  background: #f5f5f5;
}

.day-marker {
  position: absolute;
  right: 4rpx;
  top: 4rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.day-marker.has-entry {
  background: var(--primary-color);
}

.day-marker.no-entry {
  background: #ff4d4f;
}

.copy-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.dialog-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.dialog-header {
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 2rpx solid #f5f5f5;
}

.dialog-body {
  padding: 30rpx;
}

.date-range {
  display: flex;
  gap: 20rpx;
}

.date-input {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.dialog-footer {
  display: flex;
  border-top: 2rpx solid #f5f5f5;
}

.dialog-footer button {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border: none;
  border-radius: 0;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: var(--primary-color);
  color: #fff;
}