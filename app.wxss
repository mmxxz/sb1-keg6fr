page {
  --primary-color: #07C160;
  --text-color: #333333;
  --border-color: #EEEEEE;
  --background-color: #F5F5F5;
  
  font-size: 28rpx;
  color: var(--text-color);
  background-color: var(--background-color);
}

.container {
  padding: 30rpx;
  box-sizing: border-box;
}

.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-primary {
  background: var(--primary-color);
  color: #FFFFFF;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.list-item:last-child {
  border-bottom: none;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.text-primary {
  color: var(--primary-color);
}